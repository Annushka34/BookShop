<Window x:Class="WPF_UI.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_UI"
        mc:Ignorable="d"
        Title="Registration" Height="450" Width="300"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="0,80">
            <Label HorizontalAlignment="Center">Login</Label>
            <TextBox Name="TLogin" Margin="10,0"></TextBox>
            <Label HorizontalAlignment="Center">Password</Label>
            <PasswordBox Name="TPassword" Margin="10,0"></PasswordBox>
            <Label HorizontalAlignment="Center">Email</Label>
            <TextBox Name="TEmail" Margin="10,0"></TextBox>
            <Button Name="BRegister" Height="30" Background="Blue" Foreground="White" Margin="10,30"  Click="BRegister_Click">Create Account</Button>
        </StackPanel>
    </Grid>
</Window>
